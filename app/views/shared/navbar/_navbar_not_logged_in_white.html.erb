<style>
.btn-navbar {
  color: white;
}
.dropup, .dropright, .dropdown, .dropleft{
  color:white;
}
.dropdown-menu{
  background: none;
  border:none;
  top: -40px !important;
}
.dropdown button {
  color: white;
  background:none;
  border: none;
  box-shadow: none;
}

.container-navbar {
  box-shadow: 0 5px 35px rgba(126, 87, 88, 0.03),0 5px 15px rgba(0,0,0,.07);
}


.btn-navbar{
    background-color: rgba(0,0,0,0.7) !important;
  }



