<!-- check if it has to be underlined -->
<% def current_class?(test_path) %>
<% return ' btn-active' if request.path == test_path %>
<% ' ' %>
<% end %>



<div class="container-navbar">
  <div class="left-size">
    <%= link_to root_path do %>
    <%= image_tag "logo.png", class: "logo" %>
    <% end %>
  </div>

  <div class="dropdown">
    <button class="dropdown-toggle drop-btn" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-bars"></i></button>
    <div class="dropdown-menu dropdown-menu-right col-white" aria-labelledby="dropdownMenuButton">
      <%= link_to "Brewer registration", new_user_registration_path, class: "dropdown-item btn-navbar #{current_class?(new_user_registration_path)}"%>
      <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item btn-navbar #{current_class?(new_user_registration_path)}" %>
      <%= link_to "Login", new_user_session_path, class: "dropdown-item btn-navbar #{current_class?(new_user_session_path)}" %>
    </div>
  </div>

</div>
