<style>
.container-navbar {
  position: sticky;
  position: -webkit-sticky;
  z-index: 10;
  top: 0;
  background-color: white;
}
.logo {
  filter: invert(100%);
}
.dropdown button {
  color: black;
  background: none;
  border: none;
  box-shadow: none;
}
</style>

<% def current_class?(test_path) %>
<% return ' btn-active' if request.path == test_path %>
<% ' ' %>
<% end %>

<div class="container-navbar">
  <div class="left-size">
    <%= link_to root_path do %>
    <%= image_tag "logo.png", class: "logo" %>
    <% end %>
    <div class="search-form">
      <%= form_tag(beers_path, method: :get) do%>
      <%= text_field_tag(:search, params[:search],  placeholder: 'Search for a beer...') %>
      <% end %>
    </div>
  </div>
<div class="dropdown">
  <button class="dropdown-toggle drop-btn" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-bars"></i></button>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
    <%= link_to "Home", root_path, class: "dropdown-item btn-navbar #{current_class?(root_path)}" %>
    <%= link_to "Wall", posts_path, class: "dropdown-item btn-navbar #{current_class?(posts_path)}" %>
    <%= link_to "Profile", root_path(current_user.id), class: "dropdown-item btn-navbar #{current_class?(root_path(current_user.id))}" %>
    <%= link_to "Log out", destroy_user_session_path, method: 'delete', class: "dropdown-item btn-navbar " %>
  </div>
</div>
</div>
