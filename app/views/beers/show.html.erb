<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-6">
      <div class="beer-title-show">
        <img src='<%= cl_image_path(@beer.photo) %>'>
      </div>
      <div>
        <p><%= raw " <i class='fas fa-star'></i> " * @beer.rating.round %></p>
      </div>
      <div class="beer-title-header">
        <h2><%= @beer.name %></h2>
      </div>

    </div>
    <div class="col-sm-12 col-lg-6">
      <div class="left-myself">
        <div class="show-beer-card">
          <ul class="beer-info-list">
            <li><b>Beer Kind:  </b><%= @beer.kind %></li>
            <li><b>Beer Size:  </b><%= @beer.size %></li>
            <li><b>Alcohol Percentage:  </b><%= @beer.alcohol_percentage  %>%</li>
            <li><b>Description:  </b><%= @beer.description %></li>
            <li><b>Brewery:  </b><%= link_to @beer.brewery.name, brewery_path(@beer.brewery.id) %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
      <div class="col-sm-12 col-lg-6 offset-lg-3">

      </div>
    </div>

    </div>
  </div>
</div>
<div class="beer-map">
  <div id="map" style="height: 350px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
<div class="redirect-btns rows">
  <div class="adoptedlink col-sm-3 col-xs-3" >
  <%= link_to "Go back to beers", beers_path, class: 'go-to-beers-btn' %>
</div>
  <% if user_signed_in? && current_user.admin? %>
  <div class="adoptedlink col-sm-3 col-xs-3" >
    <%= link_to "Edit this beer", edit_beer_path(@beer.id), class: 'go-to-beers-btn' %>
  </div>
  <div class="adoptedlink col-sm-6 col-xs-6" >
    <%= link_to "Create a new batch", new_beer_batch_path(@beer), class: 'go-to-beers-btn' %>
  </div>
  <div class="adoptedlink col-sm-6 col-xs-6" >
    <%= link_to "All batches", beer_batches_path(@beer), class: 'go-to-beers-btn' %>
  </div>
  <% end %>

</div>

