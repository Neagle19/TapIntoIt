  <div class="beer-container-show">
    <div class="beer-title-show">
    <h2><%= @beer.name %></h2>
    </div>
    <div class="center-myself">
        <div class="beer-cards">
          <div class="show-beer-card">
            <ul>
              <li><strong>Beer Name:</strong><%= @beer.name %></li>
              <li><strong>Beer Kind:</strong><%= @beer.kind %></li>
              <li><strong>Beer Size:</strong><%= @beer.size %></li>
              <li><strong>Alcohol Percentage :</strong><%= @beer.alcohol_percentage  %>%</li>
              <li><strong>Description:</strong><%= @beer.description %></li>
              <li><strong>Brewery:</strong><%= link_to @beer.brewery.name, brewery_path(@beer.brewery.id) %></li>
            </ul>
          </div>
        </div>
        <div class="beer-photo-card">
          <img src='<%= cl_image_path(@beer.photo) %>' height="300">
        </div>
    </div>
  </div>
  <div class="redirect-btns">
    <%= link_to "Go back to beers", beers_path, class: 'go-to-beers-btn' %>
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to "Edit this beer", edit_beer_path(@beer.id), class: 'links-buttons' %>
         <%= link_to "Create a new batch", new_beer_batch_path(@beer), class: 'links-buttons' %>
        <%= link_to "All the batches from this beer", beer_batches_path(@beer), class: 'links-buttons' %>
      <% end %>
  </div>
</div>

