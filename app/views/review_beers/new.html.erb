<h1>Add review for specific beer</h1>

<%= simple_form_for([@beer, @review_beer], :url => beer_review_beers_path) do |f| %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.input :content %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit %>
  <% end %>
