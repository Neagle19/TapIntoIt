<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <div class="review-form">
        <h1>Add a review for this batch</h1>

        <%= simple_form_for([@beer, @batch, @review_batch], :url =>  beer_batch_review_batches_path) do |f| %>
        <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
        <%= f.input :content %>
        <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
        <%= link_to "Go back to batch", beer_batch_path(@beer.id, @batch), class: 'go-to-beers-btn' %>
      </div>
    </div>
  </div>
</div>
